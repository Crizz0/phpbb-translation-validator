{
	"name": "phpbb/lpv",
	"description": "A language package validator for phpBB language packs. Language packs are required to pass the validator when submitted to the language pack database.",
	"homepage": "https://github.com/nickvergessen/phpbb-translation-validator",
	"version": "1.2.0",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Joas Schilling",
			"email": "nickvergessen@phpbb.com",
			"homepage": "http://www.phpbb.com/",
			"role": "Translations Manager"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=5.3.3",
		"symfony/yaml": "2.4.*",
		"symfony/console": "2.4.*",
		"symfony/finder": "2.4.*"
	},
	"require-dev": {
		"phpunit/phpunit": "4.0.*"
	},
	"bin": [
		"epv/EPV"
	],
	"config": {
		"bin-dir": "bin"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	}
}